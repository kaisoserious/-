  border: 1px solid black;
  width: 100%;
  margin-top: 20rpx;
  background-color: rgb(251, 251, 251);
}
.money view{
  float: left;
}
.money view:nth-child(1){
  font-size: 40rpx;
  line-height: 80rpx;
}
.money view:nth-child(2){
  color: red;
