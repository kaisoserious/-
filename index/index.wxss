.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  margin-top: -180rpx;
}
.container{
  background-color: rgb(230, 255, 252);
}
.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;

}
.usermotto {
  margin-top: 20px;
  border: 1px black solid;
  border-radius: 20rpx;
  background-color: rgb(251, 251, 251);
  width: 100%;
  height: 200rpx;
}
image{
  width: 60rpx;
  margin-top: 20rpx;
}
.usermotto view{
  width: 147rpx;
  float: left;
  text-align: center;
  margin-top: 20rpx;
}
.mygoods{
  font-size: 50rpx;
  margin-top: 50rpx;
  margin-bottom: -30rpx;
  width: 100%;

}
.mygoods view{
  float: left;
  line-height: 90rpx;
}
.mygoods view:nth-child(2){
  margin-left: 380rpx;
  font-size: 30rpx;
  line-height: 100rpx;

}
.mygoods image{
  width:30rpx;
  margin-top:38rpx;
}
